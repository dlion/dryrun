---
layout: none
permalink: /feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="{{ '/assets/rss.xsl' | relative_url }}"?>
<rss version="2.0"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url }}{{ site.baseurl }}</link>
    <description>{{ site.description | xml_escape }}</description>
    <language>en</language>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <atom:link href="{{ '/feed.xml' | absolute_url }}" rel="self" type="application/rss+xml" />

    {%- assign posts = site.posts | where_exp: 'p', 'p.draft != true' -%}
    {%- for post in posts limit: 30 -%}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <link>{{ post.url | absolute_url }}</link>
      <guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      {%- assign desc = post.description | default: post.excerpt | default: post.content | strip_html | truncate: 280 -%}
      <description>{{ desc | xml_escape }}</description>
      <content:encoded><![CDATA[
{{ post.content | replace: ']]>', ']]]]><![CDATA[>' }}
      ]]></content:encoded>
    </item>
    {%- endfor -%}
  </channel>
</rss>

