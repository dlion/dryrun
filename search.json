---
layout: null
permalink: /search.json
---
[
{% assign posts = site.posts | sort: 'date' | reverse %}
{% for post in posts %}
  {
    "title": {{ post.title | jsonify }},
    "url": {{ post.url | relative_url | jsonify }},
    "date": "{{ post.date | date: "%Y-%m-%d" }}",
    "tags": [{% for t in post.tags %}{{ t | jsonify }}{% unless forloop.last %},{% endunless %}{% endfor %}],
    "description": {{ post.description | default: post.excerpt | strip_html | strip_newlines | jsonify }},
    "content": {{ post.content | strip_html | strip_newlines | truncate: 1200 | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
